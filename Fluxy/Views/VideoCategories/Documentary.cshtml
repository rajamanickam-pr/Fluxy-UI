@model  PagedList.IPagedList<Fluxy.ViewModels.Video.VideoAttributesViewModel>
@using PagedList;
@using PagedList.Mvc;
@{
    ViewBag.Title = "Documentary";
    ViewBag.Description = "A free community for sharing youtube videos and content for all age group peoples. In this page Videos about "+ ViewBag.Title;
}
<div class="container">
    <div class="alert alert-info" role="alert">
        <strong>@ViewBag.Title</strong>
    </div>
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4">
                @Html.Partial("_VideoBox", item)
            </div>
        }
    </div>
    Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
    @Html.PagedListPager(Model, page => Url.Action("Documentary", new { page }))
</div>