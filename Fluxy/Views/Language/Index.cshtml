@model IEnumerable<Fluxy.ViewModels.Localization.LanguageViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Langages</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table admin-table">
    <thead class="thead-inverse ">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LanguageCulture)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rtl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DefaultCurrency)
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody class="tbody">
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LanguageCulture)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Rtl)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DefaultCurrency)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", routeValues: new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", routeValues: new { id = item.Id }, htmlAttributes: new { onclick = "return confirm('Are you sure you wish to delete this Banner?');" })
                </td>
            </tr>
        }
    </tbody>
</table>
