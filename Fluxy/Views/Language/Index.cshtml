@model IEnumerable<Fluxy.ViewModels.Localization.LanguageViewModel>

@{
    ViewBag.Title = "Index";
}
<div class="container">
    <h2>Langages</h2>

    <p>
        @Html.ActionLink("Create New", "Create", null, htmlAttributes: new { @class = "btn btn-primary float-right", @style = "margin-bottom:20px;" })
    </p>
    <table class="table admin-table">
        <thead class="thead-inverse ">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LanguageCulture)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Rtl)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DefaultCurrency)
                </th>
                <th>
                    By
                </th>
                <th>
                    On
                </th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody class="tbody">
            @if (Model.Count() > 0)
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LanguageCulture)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Rtl)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DefaultCurrency)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CreatedBy)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CreatedDate)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", routeValues: new { id = item.Id }) |
                            @Html.ActionLink("Delete", "Delete", routeValues: new { id = item.Id }, htmlAttributes: new { onclick = "return confirm('Are you sure you wish to delete this Language?');" })
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="6"> <h3 class="text-center" style="margin-bottom:18px;">Dear admin language list is empty please add.</h3></td>
                </tr>
            }
        </tbody>
    </table>
</div>