@model IEnumerable<Fluxy.ViewModels.Video.VideoSettingsViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Settings</h2>

<p>
    @Html.ActionLink("Create New", "Create",null,htmlAttributes:new {@class= "btn btn-primary float-right", @style="margin-bottom:20px;" })
</p>
<table class="table admin-table">
    <thead class="thead-inverse ">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FrameWidth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FrameHeight)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FrameFilters)
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody class="tbody">
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FrameWidth)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FrameHeight)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FrameFilters)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }, htmlAttributes: new { onclick = "return confirm('Are you sure you wish to delete this Settings?');" })
                </td>
            </tr>
        }
    </tbody>
</table>
