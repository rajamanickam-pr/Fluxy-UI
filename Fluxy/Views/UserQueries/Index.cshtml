@model IEnumerable<Fluxy.ViewModels.Mail.ContactUsViewModel>
@{
    ViewBag.Title = "User Queries";
}
<div class="container">
    <h2>Index</h2>
    <table class="table admin-table">
        <thead class="thead-inverse ">
            <tr>
                <th>
                    <label>From</label>
                </th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody class="tbody">
            @if (Model.Count() > 0)
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <a onclick="ShowMessage(event)" data-msg="@item.Message"> @item.Email</a>
                        </td>
                        <td>
                            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id }, htmlAttributes: new { onclick = "return confirm('Are you sure you wish to delete this Message?');" })
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="6"> <h3 class="text-center" style="margin-bottom:18px;">Log list is empty.</h3></td>
                </tr>
            }
        </tbody>
    </table>

</div>
