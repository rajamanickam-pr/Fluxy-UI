@model IEnumerable<Fluxy.ViewModels.Video.VideoAttributesViewModel>

@{
    ViewBag.Title = "Index";
}
<div class="container">
    <h2>Videos</h2>

    <p>
        @Html.ActionLink("Create New", "Create", null, htmlAttributes: new { @class = "btn btn-primary float-right", @style = "margin-bottom:20px;" })
    </p>
    <table class="table admin-table">
        <thead class="thead-inverse ">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    Category
                </th>
                <th>
                    Language
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IsPublicVideo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IsAdultContent)
                </th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody class="tbody">
            @if (Model.Count() > 0)
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Title)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Category.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Language.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IsPublicVideo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IsAdultContent)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id }, htmlAttributes: new { onclick = "return confirm('Are you sure you wish to delete this Banner?');" })
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="6"> <h3 class="text-center" style="margin-bottom:18px;">Dear admin video list is empty please add videos.</h3></td>
                </tr>
            }
        </tbody>
    </table>
</div>