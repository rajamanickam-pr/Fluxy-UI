@model IEnumerable<Fluxy.ViewModels.Banners.BannerDetailsViewModel>

@{
    ViewBag.Title = "Index";
}
<div class="container">
    <h2>Banners</h2>

    <p>
        @Html.ActionLink("Create New", "Create", null, htmlAttributes: new { @class = "btn btn-primary float-right", @style = "margin-bottom:20px;" })
    </p>
    <table class="table admin-table">
        <thead class="thead-inverse ">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Headline)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Slogans)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ButtonText)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ButtonUrl)
                </th>
                <th>
                    Action
                </th>
            </tr>
        </thead>
        <tbody class="tbody">
            @if (Model.Count() > 0)
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Headline)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Slogans)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ButtonText)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ButtonUrl)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id }, htmlAttributes: new { onclick = "return confirm('Are you sure you wish to delete this Banner?');" })
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="6"> <h3 class="text-center" style="margin-bottom:18px;">Dear admin banners is empty please add.</h3></td>
                </tr>
            }
        </tbody>
    </table>
</div>