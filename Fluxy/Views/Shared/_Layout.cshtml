@using Fluxy.Core.Constants
@using Fluxy.Core.Constants.HomeController
@using Boilerplate.Web.Mvc.Twitter
@using Boilerplate.Web.Mvc.OpenGraph
<!DOCTYPE HTML>
<html lang="en">
<head @(ViewBag.OpenGraph == null ? null : Html.OpenGraphNamespace((OpenGraphMetadata)ViewBag.OpenGraph))>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewBag.Title - @Application.Name</title>

    <meta name="title" content="FluxyPictures - Videos" />
    <meta name="keywords" content="music videos,videos,educational videos,entertainment videos,infotainment videos,health videos,travel videos,people videos,sports and politics videos">
    <meta property="bt:keywords" content="music videos,videos,educational videos,entertainment videos,infotainment videos,health videos,travel videos,people videos,sports and politics videos">
    @*<meta name="description" content="A free community for sharing youtube videos and content for all aged peoples. We are an entertainment focused" />*@
    <meta name="description" content="@ViewBag.Description">

    @if (ViewBag.Author != null)
    {
        <meta name="author" content="@ViewBag.Author">
    }
    @* Render Twitter Card meta tags. *@
    @if (ViewBag.TwitterCard != null)
    {
        @Html.TwitterCard((TwitterCard)ViewBag.TwitterCard);
    }
    @* Render Facebook Open Graph meta tags. *@
    @if (ViewBag.OpenGraph != null)
    {
        @Html.OpenGraph((OpenGraphMetadata)ViewBag.OpenGraph);
    }
   
    <meta name="author" content="fluxypictures.com">
    <meta http-equiv="Content-Language" content="en-US">
    <meta name="rating" content="kids,adults,aged peoples">
    <meta name="distribution" content="global" />


    <link rel="icon" href="../../favicon.ico">

    <link rel="manifest" href="@Url.RouteUrl(HomeControllerRoute.GetManifestJson).TrimEnd('/')">
    <link href="@Url.RouteUrl(HomeControllerRoute.GetFeed)" rel="alternate" title="@Application.Name Feed" type="application/atom+xml">
    <link href="@Url.RouteUrl(HomeControllerRoute.GetOpenSearchXml).TrimEnd('/')" rel="search" title="ASP.NET MVC Boilerplate Search" type="application/opensearchdescription+xml">

    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/vendorcss")
    @Scripts.Render("~/bundles/jquery")
</head>
<body>
    @*<div id="fb-root"></div>
        <script>
            (function (d, s, id) {
                var js, fjs = d.getElementsByTagName(s)[0];
                if (d.getElementById(id)) return;
                js = d.createElement(s); js.id = id;
                js.src = "//connect.facebook.net/en_US/sdk.js#xfbml=1&version=v2.10&appId=1421789451271353";
                fjs.parentNode.insertBefore(js, fjs);
            }(document, 'script', 'facebook-jssdk'));</script>*@

    @Html.Partial("_NavigationBar")
    @Html.Partial("_Alerts")
    @RenderBody()
    @Html.Partial("_Footer")
</body>
</html>
@Scripts.Render("~/bundles/bootstrap")
@RenderSection("scripts", required: false)
