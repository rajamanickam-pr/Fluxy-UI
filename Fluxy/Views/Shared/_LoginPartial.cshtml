@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="navbar-nav mr-auto">
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="alerts.html" id="navbarDropdownMenuLink" data-toggle="dropdown"
                   aria-haspopup="true" aria-expanded="false">Hello @User.Identity.GetUserName()!</a>
                <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                    <a class="dropdown-item" href="@Url.Action("Index", "Profile")"><i class="fa fa-user" aria-hidden="true"></i> Profile</a>
                    <a class="dropdown-item" href="@Url.Action("ChangePassword", "Manage")"><i class="fa fa-key" aria-hidden="true"></i> Change password</a>
                    <a class="dropdown-item" href="@Url.Action("Edit", "Profile")"><i class="fa fa-cog" aria-hidden="true"></i> Settings</a>
                    <a class="dropdown-item" id="btnLogout" href="#"><i class="fa fa-sign-out" aria-hidden="true"></i> Log off</a>
                </div>
            </li>
            @if (HttpContext.Current.User.IsInRole("Admin"))
            {
                <li class="nav-item">
                    @Html.RouteLink("Admininstration!", new { action = "Index", controller = "Admin" }, new { title = "Administration", @class = "nav-link" })
                </li>
            }
        </ul>
    }
}
else
{
    <ul class="navbar-nav">
        <li class="nav-item">@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink", @class = "nav-link" })</li>
        <li class="nav-item">@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "nav-link" })</li>
    </ul>
}
<script src="~/Scripts/Custom/Login.min.js"></script>