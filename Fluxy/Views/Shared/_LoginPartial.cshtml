@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="navbar-nav">
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="alerts.html" id="navbarDropdownMenuLink" data-toggle="dropdown"
                   aria-haspopup="true" aria-expanded="false">Hello @User.Identity.GetUserName()!</a>
                <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                    <li class="dropdown-item"><i class="fa fa-user" aria-hidden="true"></i> @Html.ActionLink("Profile", "Index", "Profile")</li>
                    <li class="dropdown-item"><i class="fa fa-key" aria-hidden="true"></i> @Html.ActionLink("Change password", "ChangePassword", "Manage")</li>
                    <li class="dropdown-item"><i class="fa fa-cog" aria-hidden="true"></i> @Html.ActionLink("Settings", "Edit", "Profile")</li>
                    <li class="dropdown-item"><i class="fa fa-sign-out" aria-hidden="true"></i> <a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
                </ul>
            </li>
            @if (HttpContext.Current.User.IsInRole("Admin"))
            {
                <li class="nav-item">
                    @Html.RouteLink("Admininstration!", new { action = "Index", controller = "AdminHome", area = "Admin" }, new { title = "Administration", @class = "nav-link" })
                </li>
            }
        </ul>
    }
}
else
{
    <ul class="navbar-nav">
        <li class="nav-item">@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink", @class = "nav-link" })</li>
        <li class="nav-item">@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "nav-link" })</li>
    </ul>
}
