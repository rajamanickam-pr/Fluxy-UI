@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="navbar-nav mr-auto">
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown"
                   aria-haspopup="true" aria-expanded="false">Hello @User.Identity.GetUserName()!</a>
                <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                    <a class="dropdown-item" href="@Url.Action("Index", "Profile",routeValues:new {userId=String.Empty })"><i class="fa fa-user" aria-hidden="true"></i> Profile</a>
                    <a class="dropdown-item" href="@Url.Action("ChangePassword", "Manage")"><i class="fa fa-key" aria-hidden="true"></i> Change password</a>
                    <a class="dropdown-item" href="@Url.Action("Edit", "Profile")"><i class="fa fa-cog" aria-hidden="true"></i> Settings</a>
                    <a class="dropdown-item" id="btnLogout" href="#"><i class="fa fa-sign-out" aria-hidden="true"></i> Log off</a>
                </div>
            </li>
            @if (HttpContext.Current.User.IsInRole("Admin"))
            {
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="EntertainmentMenu" data-toggle="dropdown"
                       aria-haspopup="true" aria-expanded="false">Admininstration!</a>
                    <div class="dropdown-menu" aria-labelledby="EntertainmentMenu">
                        <a class="dropdown-item" href="@Url.Action("Index", "Admin")"><i class="fa fa-tachometer" aria-hidden="true"></i> Dashboard</a>
                        <a class="dropdown-item" href="@Url.Action("Index", "Banner")"><i class="fa fa-picture-o" aria-hidden="true"></i> Banner Settings</a>
                        <a class="dropdown-item" href="@Url.Action("Index", "Category")"><i class="fa fa-list-alt" aria-hidden="true"></i> Category Settings</a>
                        <a class="dropdown-item" href="@Url.Action("Index", "Language")"><i class="fa fa-language" aria-hidden="true"></i> Language Settings</a>
                        <a class="dropdown-item" href="@Url.Action("Index", "Log")"><i class="fa fa-history" aria-hidden="true"></i> Logs</a>
                        <a class="dropdown-item" href="@Url.Action("Index", "UserManagement")"><i class="fa fa-users" aria-hidden="true"></i> User Management</a>
                        <a class="dropdown-item" href="@Url.Action("Index", "UserQueries")"><i class="fa fa-question" aria-hidden="true"></i> User Queries</a>
                        <a class="dropdown-item" href="@Url.Action("Index", "VideoSettings")"><i class="fa fa-play-circle-o" aria-hidden="true"></i> Video Settings</a>
                        <a class="dropdown-item" href="@Url.Action("Index", "VideoManagement")"><i class="fa fa-play-circle" aria-hidden="true"></i> Video Management</a>
                    </div>
                </li>
            }
        </ul>
    }
}
else
{
    <ul class="navbar-nav">
        <li class="nav-item">@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink", @class = "nav-link" })</li>
        <li class="nav-item">@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "nav-link" })</li>
    </ul>
}
<script src="~/Scripts/Custom/Login.min.js"></script>