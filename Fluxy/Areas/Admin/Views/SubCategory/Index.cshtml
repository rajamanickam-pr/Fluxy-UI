@model IEnumerable<Fluxy.ViewModels.Categories.SubCategoryViewModel>
<div class="container">
    <h2>Subcategory</h2>
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#SubCategoryModal">Add New Subcategory</button><br /><br />
    <table class="table table-hover">
        <thead class="thead-inverse ">
            <tr>
                <th scope="row">
                    Name
                </th>
                <th scope="row">
                    Category
                </th>
                <th scope="row">
                    Description
                </th>
                <th>
                    Action
                </th>
            </tr>
        </thead>
        <tbody class="tbody">
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Category.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        <a href="#" onclick="return getbyID('subcategory/getbyID/'+'@item.Id')">Edit</a> |
                        <a href="#" onclick="Delele('subcategory/Delete/'+'@item.Id')">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="modal fade" id="SubCategoryModal" tabindex="-1" role="dialog" aria-labelledby="SubCategoryModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dissmiss="modal"><span aria-hidden="true">×</span></button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <input type="text" class="form-control" id="Id" placeholder="Id" disabled="disabled" />
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" id="Name" placeholder="Name" />
                    </div>
                    <div class="form-group">
                        <select class="form-control" id="SelectedCategory">
                            <option>Select Category</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" id="Description" placeholder="Description" />
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="btnAdd" onclick="return Add('subcategory/Create');">Add</button>
                <button type="button" class="btn btn-primary" id="btnUpdate" style="display:none;" onclick="Update('subcategory/Create');">Update</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<script src="~/Areas/Admin/Scripts/SubCategoryScripts.js"></script>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}   