
@model Fluxy.ViewModels.Menu.MainMenuViewModel
@using (Html.BeginForm("Create", "Menu", FormMethod.Post, new { id = "popupForm" }))
{
    if (Model != null && Model.Id > 0)
    {
        @Html.HiddenFor(a => a.Id)
    }

    <div class="form-group">
        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", placeholder = "Name" } })
        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.EditorFor(model => model.ShortName, new { htmlAttributes = new { @class = "form-control", placeholder="Short Name" } })
        @Html.ValidationMessageFor(model => model.ShortName, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.EditorFor(model => model.LinkText, new { htmlAttributes = new { @class = "form-control", placeholder="Link Text" } })
        @Html.ValidationMessageFor(model => model.LinkText, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.EditorFor(model => model.ActionName, new { htmlAttributes = new { @class = "form-control",placeholder="Action Name"} })
        @Html.ValidationMessageFor(model => model.ActionName, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.EditorFor(model => model.ControllerName, new { htmlAttributes = new { @class = "form-control",placeholder= "Controller Name" } })
        @Html.ValidationMessageFor(model => model.ControllerName, "", new { @class = "text-danger" })
    </div>

    <div>
        <input type="submit" class="btn form-control btn-primary" value="Save" />
    </div>
}

