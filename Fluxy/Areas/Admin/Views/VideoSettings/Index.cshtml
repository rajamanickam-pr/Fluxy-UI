@model IEnumerable<Fluxy.ViewModels.Video.VideoSettingsViewModel>
<div class="container">
    <h2>Video Settings</h2>
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#videoSettingsModal">Add New Setting</button><br /><br />
    <table class="table table-hover">
        <thead class="thead-inverse ">
            <tr>
                <th scope="row">
                    ID
                </th>
                <th scope="row">
                    Frame Width
                </th>
                <th scope="row">
                    Frame Height
                </th>
                <th scope="row">
                    Frame Filters
                </th>
                <th>
                    Action
                </th>
            </tr>
        </thead>
        <tbody class="tbody">
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FrameWidth)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FrameHeight)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FrameFilters)
                    </td>
                    <td>
                        <a href="#" onclick="return getbyID('videosettings/getbyID/'+'@item.Id')">Edit</a> |
                        <a href="#" onclick="Delele('videosettings/Delete/'+'@item.Id')">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="modal fade" id="videoSettingsModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dissmiss="modal"><span aria-hidden="true">×</span></button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <input type="text" class="form-control" id="Id" placeholder="Id" disabled="disabled" />
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" id="FrameWidth" placeholder="Frame Width" />
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" id="FrameHeight" placeholder="Frame Height" />
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" id="FrameFilters" placeholder="Frame Filters" />
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="btnAdd" onclick="return Add('videosettings/Create');">Add</button>
                <button type="button" class="btn btn-primary" id="btnUpdate" style="display:none;" onclick="Update('videosettings/Create');">Update</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<script src="~/Areas/Admin/Scripts/VideoSettingsScripts.js"></script>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}