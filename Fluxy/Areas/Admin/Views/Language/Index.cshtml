@model IEnumerable<Fluxy.ViewModels.Localization.LanguageViewModel>

<div class="container">
    <h2>Language</h2>
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#languageModal">Add New Language</button><br /><br />
    <table class="table table-hover">
        <thead class="thead-inverse ">
            <tr>
                <th scope="row">
                    Name
                </th>
                <th scope="row">
                    LanguageCulture
                </th>
                <th scope="row">
                    Rtl
                </th>
                <th scope="row">
                    DefaultCurrency
                </th>
                <th>
                    Action
                </th>
            </tr>
        </thead>
        <tbody class="tbody">
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LanguageCulture)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Rtl)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DefaultCurrency)
                </td>
                <td>
                    <a href="#" onclick="return getbyID('language/getbyID/'+'@item.Id')">Edit</a> |
                    <a href="#" onclick="Delele('language/Delete/'+'@item.Id')">Delete</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>

<div class="modal fade" id="languageModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dissmiss="modal"><span aria-hidden="true">×</span></button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <input type="text" class="form-control" id="Id" placeholder="Id" disabled="disabled" />
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" id="Name" placeholder="Name" />
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" id="LanguageCulture" placeholder="Language Culture" />
                    </div>
                    <div class="form-check">
                        <label class="form-check-label">
                            <input type="checkbox" id="Rtl" class="form-check-input">
                            IsRTL
                        </label>
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" id="DefaultCurrency" placeholder="Default Currency" />
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="btnAdd" onclick="return Add('language/Create');">Add</button>
                <button type="button" class="btn btn-primary" id="btnUpdate" style="display:none;" onclick="Update('language/Create');">Update</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<script src="~/Areas/Admin/Scripts/LanguageScripts.js"></script>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}   